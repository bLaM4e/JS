var a = 1, b = 1, c, d;
c = ++a; alert(c);           // 2 -- сначала инкрементирование и потом возврат значения
d = b++; alert(d);           // 1 -- сначала возврат значения и потом инкрементирование
c = (2+ ++a); alert(c);      // 5 -- 2 + (2+1) = 5
d = (2+ b++); alert(d);      // 4 -- 2 + (2) = 4, 4 присваивается в d и только потом b = 3
alert(a);                    // 3 -- изначально а = 1, и потом плюс 2 инкремента
alert(b);                    // 3 -- изначально b = 1, и потом плюс 2 инкремента
